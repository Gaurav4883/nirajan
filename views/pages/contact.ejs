<%- include('../components/dashboard/navabar.ejs') %>

    <style>
        main {
            margin-top: 90px;
            max-width: 1280px;
            margin-inline: auto;
            background-image: url("https://images.unsplash.com/photo-1596524430615-b46475ddff6e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8Y29udGFjdCUyMHVzfGVufDB8fDB8fHww&w=1000&q=80");
            background-repeat: no-repeat;
            background-size: cover;
            overflow: hidden;
        }

        .contact-form {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 0px;
            overflow: hidden;
        }

        form {
            margin-top: 20px;
        }

        .form-group {
            width: 400px;
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 8px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .send-button {
            width: 150px;
            padding: 10px;
            font-size: 16px;
            background-color: #2079ff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-bottom: 50px;
            margin-left: 120px;
        }
    </style>

    <main>
        <div class="contact-form">
            <h3 style="text-align: center; margin-top: 20px; color: black;">Leave a message for us</h3>
            <form>
                <div class="form-group">
                    <label for="fullname">Full Name</label>
                    <input type="text" id="fullname" name="fullname">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email">
                </div>
                <div class="form-group">
                    <label for="feedback">Address</label>
                    <input type="text" id="feedback" name="feedback">
                </div>
                <div class="form-group">
                    <label for="message">Feedback Message</label>
                    <textarea id="message" name="message" rows="5"></textarea>
                </div>
                <button class="send-button">Send</button>
            </form>
        </div>
    </main>